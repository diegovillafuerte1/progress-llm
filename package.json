{
  "name": "progress-knight",
  "version": "1.0.0",
  "description": "A text-based incremental game",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "llm/**/*.js",
      "!js/HackTimer.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(loglevel)/)"
    ],
    "moduleNameMapper": {
      "^loglevel$": "<rootDir>/node_modules/loglevel/dist/loglevel.min.js"
    }
  },
  "dependencies": {
    "loglevel": "^1.9.2"
  }
}
